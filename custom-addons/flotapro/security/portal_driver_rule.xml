<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <record id="rule_trip_portal_driver" model="ir.rule">
    <field name="name">Trips visibles por el chofer</field>
    <field name="model_id" ref="flotapro.model_flotapro_trip"/>
    <field name="domain_force">[('chofer_id.user_id.id', '=', user.id)]</field>
    <field name="groups" eval="[(4, ref('flotapro.group_portal_driver'))]"/>
    <field name="perm_read" eval="1"/>
    <field name="perm_write" eval="0"/>
    <field name="perm_create" eval="1"/>
    <field name="perm_unlink" eval="0"/>
  </record>

  <record id="rule_recharge_portal_driver" model="ir.rule">
    <field name="name">Recargas visibles por el chofer</field>
    <field name="model_id" ref="flotapro.model_flotapro_recharge"/>
    <field name="domain_force">[('create_uid', '=', user.id)]</field>
    <field name="groups" eval="[(4, ref('flotapro.group_portal_driver'))]"/>
    <field name="perm_read" eval="1"/>
    <field name="perm_write" eval="0"/>
    <field name="perm_create" eval="1"/>
    <field name="perm_unlink" eval="0"/>
  </record>
</odoo>